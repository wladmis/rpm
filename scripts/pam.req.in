. @RPMCONFIGDIR@/functions
[ $# -eq 1 ] && [ -n "$1" -a -z "${1##/*}" ] ||
	{ ArgvFileAction "$0" "$@"; exit; }

file="$1"

head -1 "$file" |grep -qs '^#%PAM' || exit 0

if [ -n "${PAM_SO_SUFFIX-}" ] && [ -z "${PAM_SO_SUFFIX##%*}" ]; then
	Fatal "invalid PAM_SO_SUFFIX: build system provides no valid libpam-devel package"
fi

if [ -n "${PAM_NAME_SUFFIX-}" ] && [ -z "${PAM_NAME_SUFFIX##%*}" ]; then
	Fatal "invalid PAM_NAME_SUFFIX: build system provides no valid libpam-devel package"
fi

# hack for "buildreq -bi".
[ -f "${RPM_LIBDIR-}/libpam.so" ] ||:

# pam_module.so
sed -ne 's#^\(account\|auth\|password\|session\)[[:space:]]\+\(requisite\|required\|sufficient\|optional\)[[:space:]]\+\(/lib[0-9]*/security/\)\?\([^.[:space:]]\+\.so\)\($\|[[:space:]].*\)#PAM(\4'${PAM_SO_SUFFIX-}')#pg' <"$file" |sort -u

# pam_module.so*
sed -ne 's#^\(account\|auth\|password\|session\)[[:space:]]\+\(requisite\|required\|sufficient\|optional\)[[:space:]]\+\(/lib[0-9]*/security/\)\?\([^.[:space:]]\+\.so[^[:space:]]\+\).*#PAM(\4)#pg' <"$file" |sort -u

# libpam(include), libpam(substack)
sed -ne 's#^\(account\|auth\|password\|session\)[[:space:]]\+\(include\|substack\)[[:space:]].*#libpam(\2)#pg' <"$file" |sort -u

# pam(config) via include or substack
sed -ne 's#^\(account\|auth\|password\|session\)[[:space:]]\+\(include\|substack\)[[:space:]]\+\(/etc/pam\.d/\)\?\([^[:space:]]\+\).*#pam'${PAM_NAME_SUFFIX-}'(\4)#pg' <"$file" |sort -u

# pam(config) via pam_stack
sed -ne 's#^\(account\|auth\|password\|session\)[[:space:]]\+\(requisite\|required\|sufficient\|optional\)[[:space:]]\+\(/lib[0-9]*/security/\)\?pam_stack\.so[[:space:]]\+service=\([^[:space:]]\+\).*#pam(\4)#pg' <"$file" |sort -u
