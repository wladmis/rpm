# If using normal root, avoid changing anything.
[ -n "$(echo "$RPM_BUILD_ROOT" |tr -d ' /.')" ]

. @RPMCONFIGDIR@/find-package

FIND_REQ="/bin/sh --rpm-requires"

# Make sure that this shell has the rpm-requires feature
$FIND_REQ </dev/null >/dev/null 2>&1

file="$1"
extra=

if ! reqs="$($FIND_REQ "$file" 2>/dev/null)"; then
	if egrep -vs '^(#|$)' "$file" 2>/dev/null |head -1 |grep -qs '^[ 	]*exec '; then
		reqs="$(echo "$reqs" |head -1)"
		extra="$(echo "$reqs" |sed -e 's/^\(executable\)(\(.*\))$/\2/g')"
	else
		reqs="$($FIND_REQ "$file")"
	fi
fi
reqs="$(echo "$reqs" |sed -e 's/^\(sh\|bash\|executable\)(\(.*\))$/\2/g' |LC_COLLATE=C sort -u)"
[ -n "$reqs" ] || exit 0

FindReqs()
{
	for r in "$@"; do
		if [ -z "${r/*\$*}" ]; then
			continue
		fi
		case "$(type -t -- "$r")" in
			alias|keyword|function|builtin)
				continue ;;
		esac
		FindPackage "$file" "$r"
	done
}

# Find requires
found="$(FindReqs $reqs)"

# And print them.
echo -E "$found" |LC_COLLATE=C sort -u

